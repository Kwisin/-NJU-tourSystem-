<!--pages/personal_center/personal_activity/check/check.wxml-->




<view class="page" >
    <view class="page__bd"  wx:for="{{plist}}" wx:key="id" wx:for-item="item" style='margin-top:20rpx'>
        <view class="weui-form-preview">
            <view class="weui-form-preview__hd">
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">申请状态</view>
                    <view class="weui-form-preview__value">待审批</view>
                </view>
            </view>
            <view class="weui-form-preview__bd">
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">申请时间</view>
                    <view class="weui-form-preview__value">{{item.applyTime}}</view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">用户昵称</view>
                    <view class="weui-form-preview__value">{{item.username}}</view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">年龄</view>
                    <view class="weui-form-preview__value">{{item.age}}</view>
                </view>

                
            </view>
            <view class="weui-panel__ft">
              <view class="weui-cell weui-cell_access weui-cell_link">
              <view class="button-sp-area">
                <button class="weui-btn mini-btn" type="primary" plain="true" size="mini" bindtap="agree_sub" style="margin-right:5px" data-id="{{item.id}}">同意</button>

                <button class="weui-btn mini-btn" type="warn"  plain="true" size="mini" bindtap="refuse_sub" data-id="{{item.id}}">拒绝</button>
              </view>
             </view>

            </view>
            
        </view>
    </view> 
</view>
