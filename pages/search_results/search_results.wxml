<!--pages/search_results/search_results.wxml-->
<view class="page">

    <scroll-view class="scroll" scroll-y="{{true}}" style="height:{{height}}rpx" bindscrolltolower="loadMore">
        <block class="contents" wx:for="{{activities}}" wx:key="id">
            <view class="content" bindtap='viewDetails' data-activity="{{item}}" data-id="{{item.id}}">
                <view class="activityItem" >
                    {{item.name}}
                </view>
                <view class="activityContent">
                    {{item.description}}
                </view>
            </view>
        </block>
    </scroll-view>


</view>
